#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/outputs.h>

/ {
    combos {
        compatible = "zmk,combos";

        // Clears the current Bluetooth profile
        shift_esc_pair {
            timeout-ms = <50>;
            key-positions = <0 12>;
            bindings = <&bt BT_CLR>;
        };

        // Force USB mode + Switch to layer 10
        force_usb_mode {
            timeout-ms = <50>;
            key-positions = <0 16>; /* CHANGE THESE TO YOUR PREFERRED KEYS */
            bindings = <&out OUT_USB>, <&to 10>;
        };

        // Force BLE mode + Switch to layer 1
        force_bt_mode {
            timeout-ms = <50>;
            key-positions = <1 16>; /* CHANGE THESE TO YOUR PREFERRED KEYS */
            bindings = <&out OUT_BLE>, <&to 1>;
        };
    };
};